{
    "name": "invoice-app-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev --workspace=@invoice-app/web\" \"npm run dev --workspace=@invoice-app/api\"",
        "build": "npm run build --workspaces --if-present",
        "lint": "npm run lint --workspaces --if-present"
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    }
}